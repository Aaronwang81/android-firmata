<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".led.SimpleLedActivity">

    <android.support.v7.widget.LinearLayoutCompat style="@style/Sample.Container">

        <com.xujiaao.android.firmata.sample.TipsView
            style="@style/Sample.Tips"
            app:image="@drawable/tips_led_simple"
            app:tips="@array/tips_led_simple" />

        <Switch
            android:id="@+id/action_switch"
            style="@style/Sample.Action"
            android:text="@string/label_switch" />

        <TextView
            android:id="@+id/action_blink"
            style="@style/Sample.Action.Text"
            android:text="@string/label_blink" />
    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>